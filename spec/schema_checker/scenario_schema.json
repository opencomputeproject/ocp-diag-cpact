{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Scenario Schema",
  "type": "object",
  "properties": {
    "test_scenario": {
      "type": "object",
      "properties": {
        "test_id": { "type": "string" },
        "test_name": { "type": "string" },
        "test_group": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "docker": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "container_name": { "type": "string" },
              "container_image": { "type": "string" },
              "shell": { "type": "string" },
              "container_location": { "type": "string" },
              "connection_type": { "type": "string" },
              "connection": { "type": "string" },
              "use_sudo": { "type": "boolean" }
            },
            "required": [
              "connection", "connection_type", "container_image",
              "container_location", "container_name", "shell", "use_sudo"
            ]
          }
        },
        "test_steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "step_id": { "type": "string" },
              "step_name": { "type": "string" },
              "step_description": { "type": "string" },
              "connection_type": { "type": "string" },
              "connection": { "type": "string" },
              "step_type": { "type": "string" },
              "step_command": { "type": "string" },
              "use_sudo": { "type": "boolean" },
              "method": { "type": "string" },
              "body": { "type": "null" },
              "headers": { "type": "null" },
              "duration": { "type": "integer" },
              "continue": { "type": "boolean" },
              "loop": { "type": "integer" },
              "validator_type": { "type": "string" },
              "output_analysis": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "regex": { "type": "string" },
                    "parameter_to_set": { "type": "string" }
                  },
                  "required": ["parameter_to_set", "regex"]
                }
              },
              "expected_output": { "type": "string" },
              "entry_criteria": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "expression": { "type": "string" },
                    "entry_criteria_note": { "type": "string" }
                  },
                  "required": ["entry_criteria_note", "expression"]
                }
              },
              "log_analysis_path": { "type": "string" },
              "diagnostic_analysis": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "parameter_to_set": { "type": "string" },
                    "diagnostic_search_string": { "type": "string" },
                    "search_string": { "type": "string" },
                    "diagnostic_result_code": { "type": "string" }
                  },
                  "required": ["parameter_to_set"],
                  "anyOf": [{"required": ["search_string"]}, {"required": ["diagnostic_search_string"]}
                          ],

                  "allOf": [
                    {
                      "if": { "required": ["diagnostic_search_string"] },
                      "then": { "not": { "required": ["diagnostic_result_code"] } }

                    },
                    {
                      "if": { "required": ["search_string"] },
                      "then": { "required": ["diagnostic_result_code"] }
                    }
                  ]
                }
              },
              "scenario_path": { "type": "string" }
            },
            "required": [
              "connection", "connection_type", "step_description",
              "step_id", "step_name", "step_type"
            ],
            "allOf": [
              {
                "if": { "properties": { "step_type": { "const": "command_execution" } }, "required": ["step_type"] },
                "then": {
                  "required": ["step_command", "validator_type"]
                }
              },
              {
                "if": { "properties": { "step_type": { "const": "log_analysis" } }, "required": ["step_type"] },
                "then": {
                  "required": ["log_analysis_path", "diagnostic_analysis"]
                }
              },
              {
                "if": { "properties": { "step_type": { "const": "invoke_scenario" } }, "required": ["step_type"] },
                "then": {
                  "required": ["scenario_path"]
                }
              },
              {
                "if": {
                  "not": {
                    "anyOf": [
                      { "properties": { "step_type": { "const": "command_execution" } } },
                      { "properties": { "step_type": { "const": "log_analysis" } } },
                      { "properties": { "step_type": { "const": "invoke_scenario" } } }
                    ]
                  }
              },
              "then": {
                "required": ["step_id", "step_name", "step_type", "step_command"]
                }
              }
            ]
          }
        }
      },
      "required": ["docker", "tags", "test_group", "test_id", "test_name", "test_steps"]
    }
  },
  "required": ["test_scenario"]
}
